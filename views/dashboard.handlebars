<div class="container text-light">
    <section class="newPost">
        <h2>Create New Post</h2>

        <form class="new-post-form">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
                </div>
                <input id="post-title" type="text" class="form-control" aria-label="Default"
                    aria-describedby="inputGroup-sizing-default" name="post-title" maxlength="50">
            </div>

            <div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Body</span>
                    </div>
                    <textarea id="post-content" class="form-control" aria-label="With textarea"
                        name="post-content" maxlength="255"></textarea>
                </div>

            </div>
            <button type="submit" class="btn btn-primary text-light create">Create</button>
        </form>
    </section>

    {{#if posts.length}}

    <h2>Your Posts</h2>
    <ul class="yourPosts text-light">
        {{#each posts as |post|}}
        <li class="post-li bg-dark postWithEdit">
            
            <div class="row editRow">
                <div class="col-10">{{> post-info post }}</div>
                <div class="col-2 editBtn"><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>    
            </div>
        </li>
        {{/each}}
    </ul>

    {{/if}}
</div>

<script src="/javascript/create-post.js"></script>