<div class="container">
    <h2 class="text-light">Log In</h2>
    <form id="loginForm" class="login-form">
        <div class="form-group">
            <label class="text-light" for="email-login">Email address</label>
            <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp"
                placeholder="Enter email">
        </div>
        <div class="form-group">
            <label class="text-light" for="password-login">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="log"><a href="/signup">Sign Up</a></div>

</div>

<script src="/javascript/login.js"></script>